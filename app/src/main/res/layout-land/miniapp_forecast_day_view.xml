<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/widget_tv_weekly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:layout_gravity="center_horizontal"
        android:singleLine="true"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/miniapp_forecast_weekly_size" />

    <ImageView
        android:id="@+id/widget_iv_icon"
        android:layout_width="@dimen/miniapp_forecast_icon_size"
        android:layout_height="@dimen/miniapp_forecast_icon_size"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/widget_tv_high"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:layout_gravity="center_horizontal"
            android:gravity="end"
            android:layout_marginEnd="3dp"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/miniapp_forecast_temp_size" />

        <TextView
            android:id="@+id/widget_tv_low"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:layout_gravity="center_horizontal"
            android:gravity="start"
            android:textColor="#80FFFFFF"
            android:textSize="@dimen/miniapp_forecast_temp_size" />
    </LinearLayout>

</LinearLayout>