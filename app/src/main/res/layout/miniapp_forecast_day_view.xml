<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:gravity="center"
    android:orientation="vertical" >

<!-- [BUGFIX]-Add-BEGIN by TSCD.tianjing.su,12/16/2015,1134660,[Android6.0][Weather_v5.2.8.1.0302.0]The weather widget lack one line
    <TextView
        android:id="@+id/widget_tv_weekly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:layout_gravity="center_horizontal"
        android:singleLine="true"
        android:textColor="#202958"
        android:textSize="@dimen/miniapp_forecast_weekly_size" /> -->

    <ImageView
        android:id="@+id/widget_iv_icon"
        android:layout_width="@dimen/miniapp_forecast_icon_size"
        android:layout_height="@dimen/miniapp_forecast_icon_size"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/widget_tv_high"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:layout_gravity="center_vertical"
            android:paddingEnd="2dp"
            android:singleLine="true"
            android:gravity="end"
            android:textColor="#202958"
            android:textSize="@dimen/miniapp_forecast_temp_size" />

        <TextView
            android:id="@+id/widget_tv_low"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:layout_gravity="center_vertical"
            android:paddingStart="2dp"
            android:singleLine="true"
            android:gravity="start"
            android:textColor="@color/text_color_more_grey"
            android:textSize="@dimen/miniapp_forecast_temp_size" />
    </LinearLayout>

</LinearLayout>